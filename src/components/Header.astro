---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Portfolio', href: '/portfolio' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-100 shadow-sm">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="h-10 w-10 rounded-xl bg-gradient-to-br from-blue-600 to-emerald-500 group-hover:scale-105 transition-transform duration-300"></div>
        <div>
          <div class="text-xl font-bold tracking-tight text-gray-900">ThingsDoneImmediately</div>
          <div class="text-xs font-semibold tracking-wide text-gray-500 uppercase">Digital Execution</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-10">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors relative after:absolute after:bottom-[-6px] after:left-0 after:h-0.5 after:w-0 after:bg-blue-600 hover:after:w-full after:transition-all"
          >
            {item.name}
          </a>
        ))}
        <a 
          href="/contact" 
          class="px-6 py-2.5 bg-gradient-to-r from-blue-600 to-emerald-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300"
        >
          Book Strategy Call
        </a>
      </nav>

      <!-- Mobile menu button -->
      <button class="lg:hidden p-2" aria-label="Menu">
        <div class="space-y-1.5">
          <div class="w-6 h-0.5 bg-gray-700"></div>
          <div class="w-6 h-0.5 bg-gray-700"></div>
          <div class="w-4 h-0.5 bg-gray-700"></div>
        </div>
      </button>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>