---
import Main from '../layouts/Main.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Main title="Contact | ThingsDoneImmediately">
  <Header />
  
  <main class="min-h-screen">
    <!-- Contact Hero -->
    <section class="pt-20 pb-16 md:pt-28 md:pb-24 px-6">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl font-bold tracking-tight mb-6">
            <span class="block">Let's Build</span>
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-emerald-500">Something Great</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Ready to systemize your business? Book a free strategy call to discuss your digital execution needs.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Sections -->
    <section class="py-12 md:py-20 px-6">
      <div class="container mx-auto max-w-6xl">
        <div class="grid lg:grid-cols-2 gap-16">
          
          <!-- Left: Contact Form -->
          <div>
            <div class="sticky top-24">
              <h2 class="text-3xl font-bold text-gray-900 mb-8">Send a Message</h2>
              
              <!-- Netlify Form (will work when deployed) -->
              <form name="contact" method="POST" netlify class="space-y-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Your Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none"
                    placeholder="John Smith"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none"
                    placeholder="john@example.com"
                  />
                </div>

                <div>
                  <label for="service" class="block text-sm font-medium text-gray-700 mb-2">Service Interest</label>
                  <select 
                    id="service" 
                    name="service" 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none"
                  >
                    <option value="">Select a service</option>
                    <option value="website">Website Development</option>
                    <option value="ai">AI Automation</option>
                    <option value="systems">Business Systems</option>
                    <option value="strategy">Digital Strategy</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Project Details</label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="5"
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none"
                    placeholder="Tell us about your project, goals, and timeline..."
                  ></textarea>
                </div>

                <div class="pt-4">
                  <button 
                    type="submit"
                    class="w-full px-8 py-4 bg-gradient-to-r from-blue-600 to-emerald-500 text-white font-semibold rounded-xl hover:shadow-xl hover:scale-[1.02] transition-all duration-300 text-lg"
                  >
                    Send Message
                  </button>
                  <p class="text-gray-500 text-sm text-center mt-4">
                    We'll respond within 24 hours.
                  </p>
                </div>
              </form>
            </div>
          </div>

          <!-- Right: Contact Info & CTA -->
          <div class="space-y-12">
            <!-- Quick Contact -->
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Get in Touch</h3>
              <div class="space-y-6">
                <div class="flex items-start gap-4 p-4 rounded-xl hover:bg-gray-50 transition-colors">
                  <div class="h-12 w-12 rounded-xl bg-blue-100 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">Email</div>
                    <div class="text-gray-600">hello@thingsdoneimmediately.com</div>
                    <div class="text-gray-500 text-sm mt-1">Primary contact method</div>
                  </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-xl hover:bg-gray-50 transition-colors">
                  <div class="h-12 w-12 rounded-xl bg-emerald-100 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">Response Time</div>
                    <div class="text-gray-600">Within 24 hours</div>
                    <div class="text-gray-500 text-sm mt-1">Usually faster</div>
                  </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-xl hover:bg-gray-50 transition-colors">
                  <div class="h-12 w-12 rounded-xl bg-violet-100 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">Location</div>
                    <div class="text-gray-600">Remote â€¢ Global</div>
                    <div class="text-gray-500 text-sm mt-1">Working with clients worldwide</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Calendly Embed Placeholder -->
            <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-100">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">Book a Strategy Call</h3>
              <p class="text-gray-600 mb-6">
                30-minute free consultation to discuss your project, goals, and how we can help.
              </p>
              <a 
                href="#" 
                class="inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-blue-600 to-emerald-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>Schedule on Calendly</span>
              </a>
              <p class="text-gray-500 text-sm mt-4">
                No sales pitch. Just strategy.
              </p>
            </div>

            <!-- Process -->
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Our Process</h3>
              <div class="space-y-4">
                <div class="flex gap-4">
                  <div class="h-8 w-8 rounded-full bg-blue-100 text-blue-700 font-bold flex items-center justify-center flex-shrink-0">1</div>
                  <div>
                    <div class="font-semibold text-gray-900">Strategy Call</div>
                    <div class="text-gray-600 text-sm">Understand your goals and challenges</div>
                  </div>
                </div>
                <div class="flex gap-4">
                  <div class="h-8 w-8 rounded-full bg-emerald-100 text-emerald-700 font-bold flex items-center justify-center flex-shrink-0">2</div>
                  <div>
                    <div class="font-semibold text-gray-900">Proposal & Plan</div>
                    <div class="text-gray-600 text-sm">Detailed scope, timeline, and investment</div>
                  </div>
                </div>
                <div class="flex gap-4">
                  <div class="h-8 w-8 rounded-full bg-violet-100 text-violet-700 font-bold flex items-center justify-center flex-shrink-0">3</div>
                  <div>
                    <div class="font-semibold text-gray-900">Build & Execute</div>
                    <div class="text-gray-600 text-sm">High-speed development with regular updates</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Main>